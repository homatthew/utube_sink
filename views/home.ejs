            <div class="modal-content bg-dark" style = "color:white">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Create Your Room</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div id="group1" class="d-inline-block" style="width: 100%">
                            <div class="form-group">
                                <label for="roomname">Room Name</label> 
                                <input type="roomname" class="form-control" id="roomname" placeholder="Enter a Room Name (optional)">
                            </div>
                            <div class="form-group">
                                <label for="vidurl">Video URL</label>
                                <input type="vidurl" class="form-control" id="vidurl" placeholder="Enter a YouTube url" required>
                                <div class="text-danger d-none" id="modal-error">Please Enter a Valid YouTube url.</div>
                            </div>
                        </div>
                        <div id="group2" class="d-none" style="width: 100%">
